{% extends "PinBundle::base.html.twig" %}

{% block body %}

	{#{{ form(form, {'attr': {'novalidate': 'novalidate'}}) }}#}

	<div class="row">
		<div class="col-lg-6 col-lg-offset-3">

			{{ form_start(form, {'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
			{% if edit is defined and edit %}
				<legend>Edit course</legend>
			{% else %}
				<legend>New course</legend>
			{% endif %}

			{{ form_errors(form) }}

			<div class="form-group">
				{{ form_label(form.name, 'Course name', { 'label_attr': {'class': 'control-label col-md-12'} }) }}
				<div class="col-md-12">
					{{ form_widget(form.name, { 'attr': {'class': 'form-control no-resize'} }) }}
				</div>
			</div>
			<div class="form-group">
				{{ form_label(form.code, 'Course code', { 'label_attr': {'class': 'control-label col-md-12'} }) }}
				<div class="col-md-12">
					{{ form_widget(form.code, { 'attr': {'class': 'form-control no-resize'} }) }}
				</div>
			</div>
			<div class="form-group">
				{{ form_label(form.semesterRegular, 'Semester Regular', { 'label_attr': {'class': 'control-label col-md-12'} }) }}
				<div class="col-md-12">
					{{ form_widget(form.semesterRegular, { 'attr': {'class': 'form-control'} }) }}
				</div>
			</div>
			<div class="form-group">
				{{ form_label(form.semesterPartTime, 'Semester Part Time', { 'label_attr': {'class': 'control-label
			col-md-12'}
				}) }}
				<div class="col-md-12">
					{{ form_widget(form.semesterPartTime, { 'attr': {'class': 'form-control'} }) }}
				</div>
			</div>

			<div class="form-group">
				{{ form_label(form.score, 'Score', { 'label_attr': {'class': 'control-label
			col-md-12'}
				}) }}
				<div class="col-md-12">
					{{ form_widget(form.score, { 'attr': {'class': 'form-control'} }) }}
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-12">
					<div class="checkbox clearfix">
						<label class="control-label col-md-12" for="pinbundle_course_optional">
						{{ form_widget(form.optional, { 'attr': {'class': 'form-control'} }) }}
							<span class="checkbox-material"><span class="check"></span></span>
							Optional
						</label>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="col-md-12">
					{{ form_row(form.save, { 'label': 'Save' }) }}
				</div>
			</div>

			{{ form_end(form) }}

			{{ form_rest(form) }}

		</div>
	</div>


{% endblock body %}

