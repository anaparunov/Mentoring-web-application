{% extends "PinBundle::base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
		<div class="row">
			<div class="col-md-4 col-lg-4 col-md-offset-4 col-lg-offset-4">
				{% if error %}
					<div class="alert alert-dismissable alert-danger">
						{{ error.messageKey|trans(error.messageData, 'security') }}
					</div>
				{% endif %}
				<form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
					<fieldset>
						<legend>Login</legend>
						<input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

						<div class="form-group">
							<label class="control-label col-md-12" for="username">{{ 'security.login.username'|trans
								}}</label>

							<div class="col-md-12">
								<input class="form-control" type="text" id="username" name="_username"
								       value="{{ last_username }}"
								       required="required"/>
							</div>
						</div>
						<div class="form-group">
							<label class="control-label col-md-12" for="password">{{ 'security.login.password'|trans
								}}</label>

							<div class="col-md-12">
								<input class="form-control" type="password" id="password" name="_password" required="required"/>

								<div class="checkbox clearfix">
									<label class="control-label col-md-12" for="remember_me">
										<input class="form-control" type="checkbox" id="remember_me" name="_remember_me" value="on"/>
										<span class="checkbox-material"><span class="check"></span></span> {{ 'security.login
							.remember_me'|trans }}
									</label>

								</div>

							</div>
						</div>

						<div class="row">
							<div class="col-md-12 text-center">
								<input class="btn btn-primary btn-block" type="submit" id="_submit" name="_submit" value="{{
								'security.login.submit'|trans }}"/>
							</div>
						</div>
					</fieldset>
				</form>
			</div>
		</div>

{% endblock body %}
